<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="AvaloniaMiaDev.Views.HomePageView"
    x:DataType="splitViewPane:HomePageViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:splitViewPane="clr-namespace:AvaloniaMiaDev.ViewModels.SplitViewPane"
    xmlns:views="clr-namespace:AvaloniaMiaDev.Views"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer>
        <StackPanel Classes="Page" Margin="16">
            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,12">
                <TextBlock
                    Classes="Header"
                    FontSize="28"
                    Grid.Column="0"
                    Text="Home" />
                <Button
                    Click="OnVRCalibrationRequested"
                    CornerRadius="4"
                    Grid.Column="1"
                    Padding="12,8"
                    x:Name="HeaderActionButton">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <PathIcon Data="{StaticResource HeadsetVrRegular}" />
                        <TextBlock Text="Launch VR Calibration Overlay" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
            </Grid>

            <Grid ColumnDefinitions="*,12,*,12,*">
                <!--  Left Panel  -->
                <Grid Grid.Column="0" RowDefinitions="Auto,Auto,Auto,Auto">
                    <TextBlock
                        FontSize="20"
                        FontWeight="Medium"
                        Grid.Row="0"
                        Margin="0,0,12,12"
                        Text="Left Eye Camera" />

                    <!--  Camera address section  -->
                    <Border
                        Background="{DynamicResource SystemChromeMediumLowColor}"
                        CornerRadius="8"
                        Grid.Row="1"
                        Margin="0,0,0,16"
                        Padding="16,16,16,16">
                        <StackPanel>
                            <TextBlock FontSize="14" Text="Left Camera Address" />

                            <Grid RowDefinitions="Auto,Auto,Auto">
                                <AutoCompleteBox
                                    FilterMode="Contains"
                                    FontSize="13"
                                    Grid.Row="0"
                                    Height="36"
                                    Margin="0,6"
                                    Text="{Binding LeftCameraAddress}"
                                    TextChanged="CameraAddressEntry_TextChanged"
                                    Watermark="Start typing..."
                                    x:Name="LeftCameraAddressEntry" />

                                <TextBlock
                                    FontSize="12"
                                    FontStyle="Italic"
                                    Foreground="Orange"
                                    Grid.Row="1"
                                    IsVisible="False"
                                    Margin="0,0,0,4"
                                    TextWrapping="Wrap"
                                    x:Name="LeftAddressHint" />

                                <Grid
                                    ColumnDefinitions="*,*"
                                    Grid.Row="2"
                                    Margin="0,4,0,8">

                                    <Button
                                        Click="LeftCameraStart"
                                        Content="Start Camera"
                                        FontSize="13"
                                        Grid.Column="0"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        Margin="0,0,4,0"
                                        Padding="12,8" />

                                    <Button
                                        Click="LeftCameraStopped"
                                        Content="Stop Camera"
                                        FontSize="13"
                                        Grid.Column="1"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        Margin="4,0,0,0"
                                        Padding="12,8" />
                                </Grid>
                            </Grid>

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <RadioButton
                                    Click="LeftOnTrackingModeClicked"
                                    Content="Tracking"
                                    GroupName="LeftImageControlGroup"
                                    IsChecked="True"
                                    x:Name="LeftTrackingModeButton" />
                                <RadioButton
                                    Click="LeftOnCroppingModeClicked"
                                    Content="Cropping"
                                    GroupName="LeftImageControlGroup"
                                    x:Name="LeftCroppingModeButton" />
                            </StackPanel>

                            <Button
                                Click="LeftSelectEntireFrameClicked"
                                Content="Select Entire Frame"
                                FontSize="13"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Margin="0,8,0,0"
                                Padding="0,8"
                                x:Name="LeftSelectEntireFrame" />
                        </StackPanel>
                    </Border>

                    <!--  Camera view section  -->
                    <Viewbox Grid.Row="2" x:Name="LeftViewBox">
                        <Grid>
                            <Image
                                HorizontalAlignment="Center"
                                IsHitTestVisible="True"
                                Source="{Binding LeftEyeBitmap}"
                                x:Name="LeftMouthWindow" />
                            <Canvas
                                Background="Transparent"
                                IsHitTestVisible="False"
                                x:Name="LeftCanvasWindow">
                                <Rectangle
                                    Fill="Transparent"
                                    IsHitTestVisible="False"
                                    Stroke="{DynamicResource Accent}"
                                    StrokeThickness="24"
                                    x:Name="LeftRectangleWindow" />
                            </Canvas>
                        </Grid>
                    </Viewbox>

                    <!--  Camera settings section in Expander  -->
                    <Expander
                        Grid.Row="3"
                        Header="Left Camera Settings"
                        HorizontalAlignment="Stretch"
                        IsExpanded="False"
                        IsVisible="{Binding IsLeftTrackingMode, RelativeSource={RelativeSource AncestorType=views:HomePageView}}">
                        <Border Background="{DynamicResource SystemChromeMediumLowColor}" CornerRadius="8">
                            <StackPanel>

                                <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto,Auto">
                                    <StackPanel Grid.Column="0" Grid.Row="0">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Text="Vertical Flip" />
                                        <TextBlock FontSize="12" Text="Flip the image vertically" />
                                    </StackPanel>
                                    <CheckBox
                                        Grid.Column="2"
                                        Grid.Row="0"
                                        IsChecked="{Binding FlipLeftEyeYAxis, Mode=TwoWay}" />

                                    <StackPanel
                                        Grid.Column="0"
                                        Grid.Row="1"
                                        Margin="0,12">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Text="Horizontal Flip" />
                                        <TextBlock FontSize="12" Text="Flip the image horizontally" />
                                    </StackPanel>
                                    <CheckBox
                                        Grid.Column="2"
                                        Grid.Row="1"
                                        IsChecked="{Binding FlipLeftEyeXAxis, Mode=TwoWay}" />

                                    <StackPanel Grid.Column="0" Grid.Row="2">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Text="Image Rotation" />
                                        <TextBlock FontSize="12" Text="Rotates the image in a circle" />
                                    </StackPanel>
                                    <Slider
                                        Grid.Column="0"
                                        Grid.ColumnSpan="3"
                                        Grid.Row="3"
                                        Maximum="6.28"
                                        Minimum="0"
                                        Value="{Binding LeftEyeRotation}"
                                        x:Name="LeftRotationSlider" />
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Expander>
                </Grid>

                <!--  Right Panel  -->
                <Grid Grid.Column="2" RowDefinitions="Auto,Auto,Auto,Auto">
                    <TextBlock
                        FontSize="20"
                        FontWeight="Medium"
                        Grid.Row="0"
                        Margin="0,0,12,12"
                        Text="Right Eye Camera" />

                    <!--  Camera address section  -->
                    <Border
                        Background="{DynamicResource SystemChromeMediumLowColor}"
                        CornerRadius="8"
                        Grid.Row="1"
                        Margin="0,0,0,16"
                        Padding="16,16,16,16">
                        <StackPanel>
                            <TextBlock FontSize="14" Text="Right Camera Address" />

                            <Grid RowDefinitions="Auto,Auto,Auto">
                                <AutoCompleteBox
                                    FilterMode="Contains"
                                    FontSize="13"
                                    Grid.Row="0"
                                    Height="36"
                                    Margin="0,6"
                                    Text="{Binding RightCameraAddress}"
                                    TextChanged="CameraAddressEntry_TextChanged"
                                    Watermark="Start typing..."
                                    x:Name="RightCameraAddressEntry" />

                                <TextBlock
                                    FontSize="12"
                                    FontStyle="Italic"
                                    Foreground="Orange"
                                    Grid.Row="1"
                                    IsVisible="False"
                                    Margin="0,0,0,4"
                                    TextWrapping="Wrap"
                                    x:Name="RightAddressHint" />

                                <Grid
                                    ColumnDefinitions="*,*"
                                    Grid.Row="2"
                                    Margin="0,4,0,8">

                                    <Button
                                        Click="RightCameraStart"
                                        Content="Start Camera"
                                        FontSize="13"
                                        Grid.Column="0"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        Margin="0,0,4,0"
                                        Padding="12,8" />

                                    <Button
                                        Click="RightCameraStopped"
                                        Content="Stop Camera"
                                        FontSize="13"
                                        Grid.Column="1"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        Margin="4,0,0,0"
                                        Padding="12,8" />
                                </Grid>
                            </Grid>

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <RadioButton
                                    Click="RightOnTrackingModeClicked"
                                    Content="Tracking"
                                    GroupName="RightImageControlGroup"
                                    IsChecked="True"
                                    x:Name="RightTrackingModeButton" />
                                <RadioButton
                                    Click="RightOnCroppingModeClicked"
                                    Content="Cropping"
                                    GroupName="RightImageControlGroup"
                                    x:Name="RightCroppingModeButton" />
                            </StackPanel>

                            <Button
                                Click="RightSelectEntireFrameClicked"
                                Content="Select Entire Frame"
                                FontSize="13"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Margin="0,8,0,0"
                                Padding="0,8"
                                x:Name="RightSelectEntireFrame" />
                        </StackPanel>
                    </Border>

                    <!--  Camera view section  -->
                    <Viewbox Grid.Row="2" x:Name="RightViewBox">
                        <Grid>
                            <Image
                                HorizontalAlignment="Center"
                                IsHitTestVisible="True"
                                Source="{Binding RightEyeBitmap}"
                                x:Name="RightMouthWindow" />
                            <Canvas
                                Background="Transparent"
                                IsHitTestVisible="False"
                                x:Name="RightCanvasWindow">
                                <Rectangle
                                    Fill="Transparent"
                                    IsHitTestVisible="False"
                                    Stroke="{DynamicResource Accent}"
                                    StrokeThickness="24"
                                    x:Name="RightRectangleWindow" />
                            </Canvas>
                        </Grid>
                    </Viewbox>

                    <!--  Camera settings section in Expander  -->
                    <Expander
                        Grid.Row="3"
                        Header="Right Camera Settings"
                        HorizontalAlignment="Stretch"
                        IsExpanded="False"
                        IsVisible="{Binding IsRightTrackingMode, RelativeSource={RelativeSource AncestorType=views:HomePageView}}">
                        <Border Background="{DynamicResource SystemChromeMediumLowColor}" CornerRadius="8">
                            <StackPanel>

                                <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto,Auto">
                                    <StackPanel Grid.Column="0" Grid.Row="0">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Text="Vertical Flip" />
                                        <TextBlock FontSize="12" Text="Flip the image vertically" />
                                    </StackPanel>
                                    <CheckBox
                                        Grid.Column="2"
                                        Grid.Row="0"
                                        IsChecked="{Binding FlipRightEyeYAxis, Mode=TwoWay}" />

                                    <StackPanel
                                        Grid.Column="0"
                                        Grid.Row="1"
                                        Margin="0,12">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Text="Horizontal Flip" />
                                        <TextBlock FontSize="12" Text="Flip the image horizontally" />
                                    </StackPanel>
                                    <CheckBox
                                        Grid.Column="2"
                                        Grid.Row="1"
                                        IsChecked="{Binding FlipRightEyeXAxis, Mode=TwoWay}" />

                                    <StackPanel Grid.Column="0" Grid.Row="2">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Text="Image Rotation" />
                                        <TextBlock FontSize="12" Text="Rotates the image in a circle" />
                                    </StackPanel>
                                    <Slider
                                        Grid.Column="0"
                                        Grid.ColumnSpan="3"
                                        Grid.Row="3"
                                        Maximum="6.28"
                                        Minimum="0"
                                        Value="{Binding RightEyeRotation}"
                                        x:Name="RightRotationSlider" />
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Expander>
                </Grid>

                <!--  Face Panel  -->
                <Grid Grid.Column="4" RowDefinitions="Auto,Auto,Auto,Auto">
                    <TextBlock
                        FontSize="20"
                        FontWeight="Medium"
                        Grid.Row="0"
                        Margin="0,0,12,12"
                        Text="Face Camera" />

                    <!--  Camera address section  -->
                    <Border
                        Background="{DynamicResource SystemChromeMediumLowColor}"
                        CornerRadius="8"
                        Grid.Row="1"
                        Margin="0,0,0,16"
                        Padding="16,16,16,16">
                        <StackPanel>
                            <TextBlock FontSize="14" Text="Face Camera Address" />

                            <Grid RowDefinitions="Auto,Auto,Auto">
                                <AutoCompleteBox
                                    FilterMode="Contains"
                                    FontSize="13"
                                    Grid.Row="0"
                                    Height="36"
                                    Margin="0,6"
                                    Text="{Binding FaceCameraAddress}"
                                    TextChanged="CameraAddressEntry_TextChanged"
                                    Watermark="Start typing..."
                                    x:Name="FaceCameraAddressEntry" />

                                <TextBlock
                                    FontSize="12"
                                    FontStyle="Italic"
                                    Foreground="Orange"
                                    Grid.Row="1"
                                    IsVisible="False"
                                    Margin="0,0,0,4"
                                    TextWrapping="Wrap"
                                    x:Name="FaceAddressHint" />

                                <Grid
                                    ColumnDefinitions="*,*"
                                    Grid.Row="2"
                                    Margin="0,4,0,8">

                                    <Button
                                        Click="FaceCameraStart"
                                        Content="Start Camera"
                                        FontSize="13"
                                        Grid.Column="0"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        Margin="0,0,4,0"
                                        Padding="12,8" />

                                    <Button
                                        Click="FaceCameraStopped"
                                        Content="Stop Camera"
                                        FontSize="13"
                                        Grid.Column="1"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        Margin="4,0,0,0"
                                        Padding="12,8" />
                                </Grid>
                            </Grid>

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <RadioButton
                                    Click="FaceOnTrackingModeClicked"
                                    Content="Tracking"
                                    GroupName="FaceImageControlGroup"
                                    IsChecked="True"
                                    x:Name="FaceTrackingModeButton" />
                                <RadioButton
                                    Click="FaceOnCroppingModeClicked"
                                    Content="Cropping"
                                    GroupName="FaceImageControlGroup"
                                    x:Name="FaceCroppingModeButton" />
                            </StackPanel>

                            <Button
                                Click="FaceSelectEntireFrameClicked"
                                Content="Select Entire Frame"
                                FontSize="13"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Margin="0,8,0,0"
                                Padding="0,8"
                                x:Name="FaceSelectEntireFrame" />
                        </StackPanel>
                    </Border>

                    <!--  Camera view section  -->
                    <Viewbox Grid.Row="2" x:Name="FaceViewBox">
                        <Grid>
                            <Image
                                HorizontalAlignment="Center"
                                IsHitTestVisible="True"
                                Source="{Binding FaceBitmap}"
                                x:Name="FaceMouthWindow" />
                            <Canvas
                                Background="Transparent"
                                IsHitTestVisible="False"
                                x:Name="FaceCanvasWindow">
                                <Rectangle
                                    Fill="Transparent"
                                    IsHitTestVisible="False"
                                    Stroke="{DynamicResource Accent}"
                                    StrokeThickness="24"
                                    x:Name="FaceRectangleWindow" />
                            </Canvas>
                        </Grid>
                    </Viewbox>

                    <!--  Camera settings section in Expander  -->
                    <Expander
                        Grid.Row="3"
                        Header="Face Camera Settings"
                        HorizontalAlignment="Stretch"
                        IsExpanded="False"
                        IsVisible="{Binding IsFaceTrackingMode, RelativeSource={RelativeSource AncestorType=views:HomePageView}}">
                        <Border Background="{DynamicResource SystemChromeMediumLowColor}" CornerRadius="8">
                            <StackPanel>

                                <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto,Auto">
                                    <StackPanel Grid.Column="0" Grid.Row="0">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Text="Vertical Flip" />
                                        <TextBlock FontSize="12" Text="Flip the image vertically" />
                                    </StackPanel>
                                    <CheckBox
                                        Grid.Column="2"
                                        Grid.Row="0"
                                        IsChecked="{Binding FlipFaceYAxis, Mode=TwoWay}" />

                                    <StackPanel
                                        Grid.Column="0"
                                        Grid.Row="1"
                                        Margin="0,12">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Text="Horizontal Flip" />
                                        <TextBlock FontSize="12" Text="Flip the image horizontally" />
                                    </StackPanel>
                                    <CheckBox
                                        Grid.Column="2"
                                        Grid.Row="1"
                                        IsChecked="{Binding FlipFaceXAxis, Mode=TwoWay}" />

                                    <StackPanel Grid.Column="0" Grid.Row="2">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Text="Image Rotation" />
                                        <TextBlock FontSize="12" Text="Rotates the image in a circle" />
                                    </StackPanel>
                                    <Slider
                                        Grid.Column="0"
                                        Grid.ColumnSpan="3"
                                        Grid.Row="3"
                                        Maximum="6.28"
                                        Minimum="0"
                                        Value="{Binding FaceRotation}"
                                        x:Name="FaceRotationSlider" />
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Expander>
                </Grid>
            </Grid>
        </StackPanel>
    </ScrollViewer>

</UserControl>
