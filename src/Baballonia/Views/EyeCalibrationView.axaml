                        <StackPanel Grid.Column="2" Grid.Row="1">
                            <TextBlock
                                FontWeight="Bold"
                                Text="Max Blob Size"
                                VerticalAlignment="Center" />
                            <TextBlock Text="Maximum size for detected blobs" />
